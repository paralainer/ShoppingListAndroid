<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="@dimen/add_to_list_panel_height"
        android:layout_height="match_parent"
        android:id="@+id/shoppingListItemBought"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        style="?android:attr/buttonStyleSmall"
        android:text="@string/icon_check"
        android:background="@android:color/transparent"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/shoppingListItem"
        android:layout_marginRight="@dimen/add_to_list_panel_height"
        android:layout_marginEnd="@dimen/add_to_list_panel_height"
        android:layout_marginLeft="@dimen/list_item_margin"
        android:layout_marginStart="@dimen/list_item_margin"
        android:layout_marginTop="@dimen/list_item_margin"
        android:layout_marginBottom="@dimen/list_item_margin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

</RelativeLayout>