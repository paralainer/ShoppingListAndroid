<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShoppingList$PlaceholderFragment">


    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shoppingListView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/add_to_list_panel_height" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/add_to_list_panel_height"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#ffffffff">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/addToListText"
            android:textSize="@dimen/add_to_list_text_size"
            android:layout_marginRight="@dimen/add_to_list_panel_height"
            android:layout_marginEnd="@dimen/add_to_list_panel_height"
            android:inputType="text"
            android:imeOptions="actionDone"/>
        <ImageButton
            android:layout_width="@dimen/add_to_list_panel_height"
            android:layout_height="match_parent"
            android:id="@+id/addToListButton"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:src="@android:drawable/ic_input_add"
            android:contentDescription="@string/add_to_shopping_list"
            android:background="@android:color/transparent" />

    </RelativeLayout>

</RelativeLayout>
